$(function(){
    $("#input").focus(function(){
        $(this).css("background-color","white");
    });
    $("#input").blur(function(){
        $(this).css("background-color","rgba(255, 255, 255, 0.5)");

    });
});
$("#quan").mouseover(function () {
    $(this).children("div").css("transform-origin","-200% 0");
    $(this).children("div").css("transform","scale(1)")
});
$("#quan").mouseout(function () {
    $(this).children("div").css("transform-origin","300% 0")
    $(this).children("div").css("transform","scale(0)")
});
